<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:GasPrices.ViewModels"
             xmlns:controls="using:GasPrices.CustomControls"
             x:Class="GasPrices.Views.StationDetailsView"
             mc:Ignorable="d"
             d:DesignWidth="380">

    <Design.DataContext>
        <vm:StationDetailsViewModel />
    </Design.DataContext>

    <Grid
        ColumnDefinitions="*"
        RowDefinitions="auto, auto"
        VerticalAlignment="Center"
        Margin="5, 5, 5, 5">
        <controls:StationCardControl
            Grid.Column="0"
            Grid.Row="0"
            Margin="0, 0, 0, 15"
            Station="{Binding Station}">
        </controls:StationCardControl>

        <!-- open in browser button: -->
        <Button
            Grid.Column="0"
            Grid.Row="1"
            Width="200"
            HorizontalAlignment="Center"
            HorizontalContentAlignment="Center"
            Content="In Google Maps öffnen"
            Command="{Binding OpenInBrowser}">
        </Button>
    </Grid>
</UserControl>