<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:i="clr-namespace:Avalonia.Xaml.Interactivity;assembly=Avalonia.Xaml.Interactivity"
             xmlns:ia="clr-namespace:Avalonia.Xaml.Interactions.Core;assembly=Avalonia.Xaml.Interactions"
             xmlns:map="clr-namespace:Mapsui.UI.Avalonia;assembly=Mapsui.UI.Avalonia"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="800"
             x:Class="GasPrices.Views.LocationPickerView">

	<Grid
		Margin="5, 15, 5, 15"
		RowDefinitions="*, auto">

		<!-- Map: -->
		<map:MapControl
			x:Name="MapControl"
			Grid.Row="0"
			HorizontalAlignment="Stretch"
			VerticalAlignment="Stretch">
			<i:Interaction.Behaviors>
				<ia:EventTriggerBehavior EventName="Info">
					<ia:InvokeCommandAction Command="{Binding InfoCommand}" PassEventArgsToCommand="True"/>
				</ia:EventTriggerBehavior>
			</i:Interaction.Behaviors>
		</map:MapControl>

		<!-- Back button: -->
		<Button
			Grid.Column="0"
			Grid.Row="1"
			HorizontalAlignment="Stretch"
			HorizontalContentAlignment="Center"
			Content="ZurÃ¼ck"
			Command="{Binding BackCommand}">
		</Button>
	</Grid>

</UserControl>
